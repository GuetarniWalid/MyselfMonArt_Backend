{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*",
    "config",
    "types"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "Types/*": [
        "./types/*",
        "./types/Product.d.ts"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/ally",
      "@adonisjs/lucid",
      "adonis5-scheduler",
      "@adonisjs/auth",
      "@adonisjs/mail"
    ]
  }
}
